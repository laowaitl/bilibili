


.head{
  display: flex;
  justify-content:space-between;
  align-items:center;
  
}
.head_logo{
  margin-left: 30rpx; 
}
.head_sousuo{
  margin-right: 30rpx; 
}

 .content{
  display: flex;
  flex-wrap: wrap;
} 

.content_item{
  margin: 5rpx 12.4rpx 5rpx;
   width:  350rpx; height: 320rpx; 
  
}

.content_item_image{
  
  width:  350rpx; height: 200rpx; 
  background-color: goldenrod;
  
}

.content_item_text{
font-size: 12px;
color: white;
background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
height: 100rpx;
display: flex;
align-items: flex-end;
justify-content:space-between ;
position: relative;
top: -100rpx; 

}

.content_item_text_l{
display: flex;
align-items: center;
margin-left: 10rpx;
}
.content_item_text text{
  margin-right:  10rpx; 
}
.content_item_title{
  position: relative;
top: -100rpx; 

font-size: 20px;
width: 350rpx;
overflow: hidden;
text-overflow: ellipsis;
display:-webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;

}
